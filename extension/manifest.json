{
  "manifest_version": 3,
  "name": "Misinfo Detector",
  "version": "1.0",
  "description": "Detect misinformation on any webpage using your AI backend.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "http://0.0.0.0:5000/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background/background.js"
  }
}
